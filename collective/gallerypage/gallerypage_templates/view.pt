<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.gallerypage">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

  <div class="gallery" 
      tal:define="first_image view/get_first_image"
      tal:condition="first_image">
      <tal:images tal:repeat="image view/get_images">
      <a rel="lightbox-gallerypage" tal:attributes="href string:${image/absolute_url}/image_large"><img tal:condition="repeat/image/start" tal:replace="structure image/@@images/image/gallerypage_preview" /></a>
      </tal:images>
  </div>

    <div class="main-text" tal:content="structure context/text/output|nothing" />

    <ul class="file-listing">
        <li tal:repeat="ob view/get_files">
            <h2 tal:content="ob/title" />
            <div class="description" tal:content="ob/description" />
            <div>
                <a tal:attributes="href string:${ob/absolute_url}/view" target="_blank">View</a>
                |
                <a tal:attributes="href string:${ob/absolute_url}/at_download/file">Download</a>
            </div>
        </li>
    </ul>
  </metal:content-core>
</metal:main>

</body>
</html>

